<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/venice" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_item"
            android:paddingLeft="10dp"
            android:background="#99141414"
            android:text="Thành phố venice"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/img_item"
            android:layout_alignRight="@+id/img_item"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_share" />

        <ImageView
            android:id="@+id/img_favorite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/img_item"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/img_share"
            android:src="@drawable/ic_favorite" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>